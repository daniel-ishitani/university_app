<div class='container'>
    <div class='row-center sign-up-form'>
        <div class='col s12 m12 l12'>
            <div class='card-panel'>
                <div class='row'>
                    <div class='col s12'>
                        <h3 class='center-align'>Login</h3>
                    </div>
                </div>
                <div class='row'>
                    <%= form_for(:sessions, html: {class: 'col s12'}) do |f| %>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <%= f.label :email, class: 'active' %>
                                <%= f.email_field :email, autofocus: true %>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <%= f.label :password, class: 'active' %>
                                <%= f.password_field :password %>
                            </div>
                        </div>
                        <%= f.button('Login', class: 'btn waves-effect waves-light right') %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>