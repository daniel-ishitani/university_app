<% if @student.errors.any? %>
    <div class='container'>
        <div class='row-center sign-up-form'>
            <div class='col s12 m12 l12'>
                <div class='card-panel red base'>
                    <span class='white-text'>
                        <strong><%= pluralize(@student.errors.count, "error") %></strong>
                        <ul>
                            <% @student.errors.full_messages.each do |error| %>
                                <li><%= error %></li>
                            <% end %>
                        </ul>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class='container'>
    <div class='row-center sign-up-form'>
        <div class='col s12 m12 l12'>
            <div class='card-panel'>
                <div class='row'>
                    <div class='col s12'>
                        <h3 class='center-align'>Sign up</h3>
                    </div>
                </div>
                <div class='row'>
                    <%= form_for(@student, html: {class: 'col s12'}) do |f| %>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <%= f.label :name %>
                                <%= f.text_field :name, placeholder: "Full name", autofocus: true %>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <%= f.label :email %>
                                <%= f.text_field :email %>
                            </div>
                        </div>
                        <%= f.submit 'Sign up', class: 'btn waves-effect waves-light right' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>